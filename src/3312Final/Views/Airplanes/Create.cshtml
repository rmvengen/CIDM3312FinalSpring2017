@model _3312Final.Models.Airplane

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Airplane</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ID" type="hidden">
        <div class="form-group">
            <label asp-for="Pilot" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Pilot" class="form-control" />
                <span asp-validation-for="Pilot" class="text-danger"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Weight" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OutsideAirTemp" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OutsideAirTemp" class="form-control" />
                <span asp-validation-for="OutsideAirTemp" class="text-danger" />
            </div>
        </div>
            <div class="form-group">
                <label asp-for="Altitude" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Altitude" class="form-control" />
                    <span asp-validation-for="Altitude" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FlapSetting" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <p><b>Take off</b></p>
                   @* <input asp-for="FlapSetting" class="dropdown" />*@
                    <select asp-for="FlapSetting">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="15">15</option>
                    </select>
                    
                </div>
            </div>
        
            <div class="form-group">
                <label asp-for="FlapSettingLand" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <p><b>Landing</b></p>
                    <select asp-for="FlapSettingLand">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="35">35</option>
                    </select>
                    
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input asp-for="Ice" />
                        <label asp-for="Ice"></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input asp-for="Rain" />
                        <label asp-for="Rain"></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RunwayDirection" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="RunwayDirection" class="form-control" />
                    <span asp-validation-for="RunwayDirection" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input asp-for="Snow" />
                        <label asp-for="Snow"></label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="TripDistance" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="TripDistance" class="form-control" />
                    <span asp-validation-for="TripDistance" class="text-danger" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
